@model CollegeProjectMVC.Models.CourseModel

@* Callback for layout & title page name *@
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Course</title>
    @* Css for top arrow button *@
    <style>
        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-color: black;
            color: white;
            cursor: pointer;
            padding: 15px;
            border-radius: 4px;
        }

            #myBtn:hover {
                background-color: #555;
            }
    </style>
</head>
<body>

    @* top button *@
    <button onclick="topFunction()" id="myBtn" title="Go to top"><img src="https://img.icons8.com/material-sharp/344/ffffff/circled-up-2.png" height="40" width="40"></button>

    @* Course Page name *@
    <h2 style="background-color:#3a3636; color: white; padding: 20px">Courses</h2>

    <br>

    @* Main Pannel for courses *@
    <div style="display: flex;">

        @* Left course Computer Science Pannel *@
        <div class="left-pannel" style="background-color: #eeeeee; width: 522px; height: 380px; padding: 10px 30px; border-radius: 20px; margin-left: 30px;">

            @* call back model for course *@
            <h1 style="text-decoration: underline; text-decoration-color: #f99d20; padding-bottom: 5px; text-underline-offset: 5px;"><b>@Model.CourseTitle</b></h1>
            <h3><b>Course Code: </b>@Model.CourseCode, <b>UCAS:</b> @Model.UCASCode</h3>
            <p>@Model.CourseDescription</p>
            <h4><b>Duration:</b> @Model.CourseTotalHours</h4>
            <h4><b>Availability:</b> @Model.CourseAvailability</h4>
            <h4><b>Accreditation:</b> @Model.Accreditation</h4>
            <h4><b>Fees:</b> @Model.CourseCost</h4>
            @* button for computer science modules*@
            <p><a style="border: 2px solid; border-color: #3863d9; color: black;" class="btn btn-default" href="~/ComputerScience/Modules">Learn more &raquo;</a></p>
        </div>

        @* Right Software Engineer course Pannel *@
        <div class="right-pannel" style="background-color: #eeeeee; width: 522px; padding: 10px 30px; border-radius: 20px; margin-left: 20px">

            @* call back model for course *@
            <h1 style="text-decoration: underline; text-decoration-color: #f99d20; padding-bottom: 5px; text-underline-offset: 5px;"><b>@Model.CourseTitle2</b></h1>
            <h3><b>Course Code:</b> @Model.CourseCode2, <b>UCAS:</b> @Model.UCASCode2</h3>
            <p>@Model.CourseDescription2</p>
            <h4><b>Duration:</b> @Model.CourseTotalHours2</h4>
            <h4><b>Availability:</b> @Model.CourseAvailability2</h4>
            <h4><b>Accreditation:</b> @Model.Accreditation2</h4>
            <h4><b>Fees:</b> @Model.CourseCost2</h4>
            @* button for software engineering modules *@
            <p><a style="border: 2px solid; border-color: #3863d9; color: black;" class="btn btn-default" href="~/SoftwareEngineering/Modules">Learn more &raquo;</a></p>
        </div>

    </div>

    <br>

    @* Lower Cyber Security Pannel *@
    <div style="background-color: #eeeeee; width: 522px; height: 400px; padding: 10px 30px; border-radius: 20px; margin-left: 30px;">
        @* call back model for course *@
        <h1 style="text-decoration: underline; text-decoration-color: #f99d20; padding-bottom: 5px; text-underline-offset: 5px;"><b>@Model.CourseTitle3</b></h1>
        <h3><b>Course Code:</b> @Model.CourseCode3, <b>UCAS:</b> @Model.UCASCode3</h3>
        <p>@Model.CourseDescription3</p>
        <h4><b>Duration:</b> @Model.CourseTotalHours3</h4>
        <h4><b>Availability:</b> @Model.CourseAvailability3</h4>
        <h4><b>Accreditation:</b> @Model.Accreditation3</h4>
        <h4><b>Fees:</b> @Model.CourseCost3</h4>
        @* button for cybersecurity mdoules *@
        <p><a style="border: 2px solid; border-color: #3863d9; color: black;" class="btn btn-default" href="~/CyberSecurity/Modules">Learn more &raquo;</a></p>
    </div>

    <br>
    <br>

    @* Advertisment Pannel *@
    <div style="display: flex; padding-left: 200px;">
        <div class="first-advert">
            <img src="http://cdn.firstwefeast.com/assets/2014/10/starbucks.gif" width="400" height="200">
        </div>
        <div class="second-advert">
            <img src="https://londonnewsonline.co.uk/wp-content/uploads/2019/07/Kebab-MPU.gif" width="400" height="200">
        </div>
    </div>

    <br>
    <br>
    <br>

    @* Footer Pannel *@
    <div style="background-color: black; color:white; width: 1200px; height: 300px;   padding-left: 60px;">

        <div style="display: flex;">
            <div style="padding-top: 50px;">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTeKni2xKIVFUE9CFxdV7mhH5e2YNgevuX80jxnw9QlzUlrPneIwL-JbyngApUkA26NrA&usqp=CAU" height="120" width="320">
            </div>
            <div>
                <ul class="nav navbar-nav" style="padding-top: 50px; padding-left: 320px; color: white; font-size: 17px;">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Course", "Course", "Course")</li>
                    <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>

        <br>

        <div>
            <b style="font-size: 22px;">Information Technology University Pakistan</b>
            <p style="font-size: 13px;">6th Floor، ARFA Tower, Ferozepur Rd, Nishtar Town, Lahore, <br> Punjab, Pakistan</p>
        </div>

    </div>

    @* Java script for top arrow functionality *@
    <script>
        //Get the button
        var mybutton = document.getElementById("myBtn");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
</body>
</html>
